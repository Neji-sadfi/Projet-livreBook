<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10.0"
      xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.livrebook.gui.FeedController" >

    <TextArea fx:id="chatArea" prefHeight="300.0" prefWidth="600.0" wrapText="true">
        <font>
            <Font size="14.0" />
        </font>
    </TextArea>

    <TextField fx:id="inputField" promptText="Saisissez votre message..." />

    <Button fx:id="sendButton" onAction="#handleSendButtonAction" text="Envoyer" />

</VBox>
